<Window x:Class="HospitalApp.RoomDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Detail"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBrush}">
    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20" Effect="{StaticResource ShadowEffect}">
            <StackPanel>
                <TextBlock Text="Room Information"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Room Number"/>
                <TextBox x:Name="txtNumber" Height="28" Margin="0,0,0,8"/>

                <TextBlock Text="Room Type"/>
                <ComboBox x:Name="cbType" Height="28" Margin="0,0,0,20">
                    <ComboBoxItem Content="Single"/>
                    <ComboBoxItem Content="Double"/>
                    <ComboBoxItem Content="VIP"/>
                    <ComboBoxItem Content="ICU"/>
                </ComboBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Save" Width="100" Height="32"
                            Style="{StaticResource PrimaryButton}"
                            Click="BtnSave_Click"/>
                    <Button Content="Cancel" Width="100" Height="32"
                            Margin="10,0,0,0"
                            Click="BtnCancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
