<Window x:Class="HospitalApp.DoctorBrowseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Doctors"
        Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgBrush}">
    <Grid Margin="20">
        <Border Background="White"
                CornerRadius="10"
                Padding="20"
                Effect="{StaticResource ShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Doctor List"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{StaticResource DarkBlue}"
                           Margin="0,0,0,10"/>

                <DataGrid x:Name="dgDoctors"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="200"/>
                        <DataGridTextColumn Header="Department" Binding="{Binding Department.Name}" Width="200"/>
                        <DataGridTextColumn Header="Specialization" Binding="{Binding Specialization}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Content="View Detail"
                        Grid.Row="2"
                        Width="120"
                        Height="32"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0"
                        Style="{StaticResource PrimaryButton}"
                        Click="BtnViewDetail_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
