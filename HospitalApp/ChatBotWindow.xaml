<Window x:Class="HospitalApp.ChatBotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hospital Assistant"
        Height="520" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F8">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Khung hiển thị hội thoại -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="txtConversation"
                       TextWrapping="Wrap"
                       FontSize="14"/>
        </ScrollViewer>

        <!-- Ô nhập + nút gửi -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
            <TextBox x:Name="txtInput"
                     Height="32"
                     Width="430"
                     Margin="0,0,8,0"
                     VerticalContentAlignment="Center"
                     Text="Nhập câu hỏi..."/>
            <Button Content="Gửi"
                    Width="80"
                    Height="32"
                    Background="#0078D7"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="BtnSend_Click"/>
        </StackPanel>
    </Grid>
</Window>
