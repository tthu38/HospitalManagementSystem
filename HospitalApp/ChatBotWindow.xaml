<Window x:Class="HospitalApp.ChatBotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hospital Assistant"
        Height="600" Width="540"
        WindowStartupLocation="CenterScreen"
        Background="#F2F5F7">

    <Window.Resources>

        <!-- USER BUBBLE -->
        <Style x:Key="UserBubbleStyle" TargetType="Border">
            <Setter Property="Background" Value="#0A67C7"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="50 5 0 5"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <!-- BOT BUBBLE -->
        <Style x:Key="BotBubbleStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0 5 50 5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- TEXT STYLE -->
        <Style x:Key="BubbleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

    </Window.Resources>

    <Grid>

        <!-- HEADER -->
        <Border Background="#0A67C7" Height="55" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <TextBlock Text="🤖" FontSize="22" Margin="0,0,8,0"/>
                <TextBlock Text="Hospital Assistant"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Grid Margin="10,65,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- CHAT AREA -->
            <ScrollViewer x:Name="scroll"
                          Grid.Row="0"
                          VerticalScrollBarVisibility="Auto"
                          Background="#F2F5F7">
                <StackPanel x:Name="chatPanel" Margin="5"/>
            </ScrollViewer>

            <!-- INPUT AREA -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="10"
                    BorderBrush="#D0D7E2" BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="txtInput"
                             FontSize="14"
                             Height="36"
                             Width="360"
                             VerticalContentAlignment="Center"
                             Margin="0,0,10,0"
                             Background="#F4F6F8"
                             Padding="10"
                             BorderBrush="#D0D7E2"
                             BorderThickness="1"/>

                    <Button Content="Gửi"
                            Width="80"
                            Height="36"
                            Background="#0A67C7"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="BtnSend_Click"/>
                </StackPanel>
            </Border>

        </Grid>

    </Grid>
</Window>
