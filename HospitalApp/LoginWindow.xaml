<Window x:Class="HospitalApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="430" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Background="{StaticResource PrimaryBrush}"/>

        <StackPanel Grid.Column="1"
                    Margin="30,50,30,30">
            <TextBlock Text="Login to your account"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Username" Margin="0,5,0,3"/>
            <TextBox x:Name="txtUsername" Height="30"/>

            <TextBlock Text="Password" Margin="0,12,0,3"/>
            <PasswordBox x:Name="txtPassword" Height="30"/>

            <TextBlock Text="Role" Margin="0,12,0,3"/>
            <ComboBox x:Name="cbRole" Height="30">
                <ComboBoxItem Content="Admin"/>
                <ComboBoxItem Content="Doctor"/>
                <ComboBoxItem Content="Patient"/>
            </ComboBox>
            
            

            <Button Content="Login"
        Margin="0,20,0,0"
        Height="36"
        Style="{StaticResource PrimaryButton}"
        Click="BtnLogin_Click"/>



            <Button Content="Forgot Password?"
        Margin="0,10,0,0"
        Height="30"
        Background="Transparent"
        Foreground="Blue"
        BorderThickness="0"
        FontWeight="Bold"
        Cursor="Hand"
        Click="BtnForgotPassword_Click"/>

        </StackPanel>
    </Grid>
</Window>
