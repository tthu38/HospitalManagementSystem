<Window x:Class="HospitalApp.DoctorDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Doctor Dashboard"
        Height="720" Width="1200"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="{StaticResource DarkBlue}">
            <StackPanel Margin="20,30,10,20">
                <TextBlock Text="Doctor Panel"
               FontSize="22"
               FontWeight="Bold"
               Foreground="White"
               Margin="0,0,0,25"/>

                <Button Content="My Appointments"
            Style="{StaticResource SidebarButtonStyle}"
            Click="BtnAppointment_Click"/>

                <Button Content="Patients"
            Style="{StaticResource SidebarButtonStyle}"
            Click="BtnPatient_Click"/>

                <Button Content="Admissions"
            Style="{StaticResource SidebarButtonStyle}"
            Click="BtnAdmission_Click"/>

                <Button Content="Logout"
            Margin="0,40,0,0"
            Height="38"
            Background="{StaticResource AccentRed}"
            Foreground="White"
            FontWeight="Bold"
            Click="BtnLogout_Click"/>
            </StackPanel>

        </Border>

        <!-- MAIN -->
        <Border Grid.Column="1"
        Margin="20"
        CornerRadius="8"
        Background="White"
        Padding="20"
        Effect="{StaticResource ShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="My Appointments"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="{StaticResource DarkBlue}"
                   Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
                    <Button Content="Confirm"
                    Width="110"
                    Style="{StaticResource PrimaryButton}"
                    Click="BtnConfirm_Click"/>
                    <Button Content="Cancel"
                    Width="110"
                    Margin="10,0,0,0"
                    Style="{StaticResource PrimaryButton}"
                    Click="BtnCancel_Click"/>
                    <Button Content="Add Notes"
                    Width="120"
                    Margin="10,0,0,0"
                    Style="{StaticResource PrimaryButton}"
                    Click="BtnNotes_Click"/>
                    <Button Content="Refresh"
                    Width="100"
                    Margin="10,0,0,0"
                    Style="{StaticResource PrimaryButton}"
                    Click="BtnAppointment_Click"/>
                </StackPanel>

                <DataGrid x:Name="dgAppointments"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Patient" Binding="{Binding Patient.FullName}" Width="150"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding AppointmentDate}" Width="120"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

    </Grid>
</Window>
