<Window x:Class="HospitalApp.PatientDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patient Dashboard"
        Height="720" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="{StaticResource DarkBlue}">
            <StackPanel Margin="20,30,10,20">
                <TextBlock Text="Patient Panel"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,25"/>

                <Button Content="My Appointments"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="BtnAppointment_Click"/>

                <Button Content="Admissions"
        Style="{StaticResource SidebarButtonStyle}"
        Click="BtnAdmissions_Click"/>

                <Button Content="Doctors"
        Style="{StaticResource SidebarButtonStyle}"
        Click="BtnDoctors_Click"/>
                <Button Content="Billing"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="BtnBilling_Click"/>
                <Button Content="Feedback"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="BtnFeedback_Click"/>
                <Button Content="Profile"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="BtnProfile_Click"/>

                <Button Content="Chat with Assistant"
        Style="{StaticResource SidebarButtonStyle}"
        Click="BtnChat_Click"/>

                
                <Button Content="Logout"
                        Margin="0,40,0,0"
                        Height="38"
                        Background="{StaticResource AccentRed}"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnLogout_Click"/>
            </StackPanel>
        </Border>

        <!-- MAIN -->
        <Border Grid.Column="1"
        Margin="20"
        CornerRadius="8"
        Background="White"
        Padding="20"
        Effect="{StaticResource ShadowEffect}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="txtWelcome"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="{StaticResource DarkBlue}"
                   Margin="0,0,0,15"/>

                <!-- Thanh nút chức năng -->
                <StackPanel Orientation="Horizontal"
                Grid.Row="1"
                Margin="0,0,0,10">
                    <Button Content="Book Appointment"
                Width="160"
                Style="{StaticResource PrimaryButton}"
                Click="BtnBook_Click"/>
                    <Button Content="Cancel Appointment"
                Width="160"
                Margin="10,0,0,0"
                Style="{StaticResource PrimaryButton}"
                Click="BtnCancelAppointment_Click"/>
                    <Button Content="Refresh"
                Width="100"
                Margin="10,0,0,0"
                Style="{StaticResource PrimaryButton}"
                Click="BtnAppointment_Click"/>
                </StackPanel>

                <DataGrid x:Name="dgAppointments"
              Grid.Row="2"
              AutoGenerateColumns="True"
              IsReadOnly="True"/>
            </Grid>
        </Border>

    </Grid>
</Window>
