<Window x:Class="HospitalApp.DoctorDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Doctor Details"
        Height="520" Width="520"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBrush}">
    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20" Effect="{StaticResource ShadowEffect}">
            <StackPanel>
                <TextBlock Text="Doctor Information"
                           FontSize="22" FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Full Name"/>
                <TextBox x:Name="txtName" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Department"/>
                <ComboBox x:Name="cbDepartment" Height="30" Margin="0,0,0,10" DisplayMemberPath="Name"/>

                <TextBlock Text="Specialization"/>
                <TextBox x:Name="txtSpec" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Username"/>
                <TextBox x:Name="txtUsername" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Password"/>
                <PasswordBox x:Name="txtPassword" Height="30" Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Save" Width="100" Height="34"
                            Style="{StaticResource PrimaryButton}" Click="BtnSave_Click"/>
                    <Button Content="Cancel" Width="100" Height="34"
                            Margin="10,0,0,0" Click="BtnCancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
