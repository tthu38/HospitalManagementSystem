<Window x:Class="HospitalApp.DoctorDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Doctor Details"
        Height="540" Width="520"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBrush}">
    <Grid Margin="25">
        <Border Background="White"
                CornerRadius="10"
                Padding="25"
                Effect="{StaticResource ShadowEffect}">
            <StackPanel>
                <TextBlock Text="🩺 Doctor Information"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           Margin="0,0,0,20"/>

                <!-- Full Name -->
                <TextBlock Text="Full Name" Foreground="{StaticResource TextGrayBrush}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtName"
                         Height="32"
                         Margin="0,0,0,10"
                         Padding="6"
                         BorderBrush="#B0BEC5"/>

                <!-- Department -->
                <TextBlock Text="Department" Foreground="{StaticResource TextGrayBrush}" Margin="0,0,0,5"/>
                <ComboBox x:Name="cbDepartment"
                          Height="32"
                          Margin="0,0,0,10"
                          DisplayMemberPath="Name"
                          BorderBrush="#B0BEC5"/>

                <!-- Specialization -->
                <TextBlock Text="Specialization" Foreground="{StaticResource TextGrayBrush}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtSpec"
                         Height="32"
                         Margin="0,0,0,10"
                         Padding="6"
                         BorderBrush="#B0BEC5"/>

                <!-- Username -->
                <TextBlock Text="Username" Foreground="{StaticResource TextGrayBrush}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername"
                         Height="32"
                         Margin="0,0,0,10"
                         Padding="6"
                         BorderBrush="#B0BEC5"/>

                <!-- Password -->
                <TextBlock Text="Password" Foreground="{StaticResource TextGrayBrush}" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword"
                             Height="32"
                             Margin="0,0,0,20"
                             BorderBrush="#B0BEC5"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="💾 Save"
                            Width="100" Height="36"
                            Style="{StaticResource PrimaryButton}"
                            Click="BtnSave_Click"/>
                    <Button Content="Cancel"
                            Width="100" Height="36"
                            Margin="10,0,0,0"
                            Background="#E53935"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Click="BtnCancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
