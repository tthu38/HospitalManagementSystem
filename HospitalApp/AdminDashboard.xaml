<Window x:Class="HospitalApp.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard"
        Height="720" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="{StaticResource DarkBlue}">
            <StackPanel Margin="20,30,10,20">
                <TextBlock Text="Admin Panel"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,25"/>

                <Button Content="Manage Doctors"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="BtnDoctor_Click"/>
                <Button Content="Manage Patients"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="BtnPatient_Click"/>
                <Button Content="Manage Rooms"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="BtnRoom_Click"/>
                <Button Content="Billing"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="BtnBilling_Click"/>

                <Button Content="Logout"
                        Margin="0,40,0,0"
                        Height="38"
                        Background="{StaticResource AccentRed}"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnLogout_Click"/>
            </StackPanel>
        </Border>

        <!-- MAIN -->
        <Border Grid.Column="1"
                Margin="20"
                CornerRadius="8"
                Background="White"
                Padding="10"
                Effect="{StaticResource ShadowEffect}">
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"/>
        </Border>
    </Grid>
</Window>
