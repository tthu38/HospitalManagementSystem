<Window x:Class="HospitalApp.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password"
        Height="400" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBrush}">

    <Grid Margin="20">
        <Border Background="White"
                CornerRadius="10"
                Padding="20"
                Effect="{StaticResource ShadowEffect}">
            <StackPanel>
                <TextBlock Text="Reset Your Password"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Enter your registered email:"/>
                <TextBox x:Name="txtEmail" Height="30" Margin="0,5,0,10"/>

                <Button x:Name="btnSendOtp"
                        Content="Send OTP"
                        Style="{StaticResource PrimaryButton}"
                        Click="BtnSendOtp_Click"/>

                <TextBlock Text="Enter OTP:" Margin="0,15,0,0"/>
                <TextBox x:Name="txtOtp" Height="30" Margin="0,5,0,10"/>

                <TextBlock Text="New Password:"/>
                <PasswordBox x:Name="txtNewPassword" Height="30" Margin="0,5,0,15"/>

                <Button Content="Reset Password"
                        Style="{StaticResource PrimaryButton}"
                        Click="BtnResetPassword_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
