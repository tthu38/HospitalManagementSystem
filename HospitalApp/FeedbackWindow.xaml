<Window x:Class="HospitalApp.FeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Feedback"
        Height="500" Width="520"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F9">

    <Window.Resources>

        <!-- ⭐ STAR BUTTON STYLE (FIXED) -->
        <Style x:Key="StarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Content" Value="☆"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

    </Window.Resources>

    <Grid Margin="20">
        <Border Background="White"
                CornerRadius="15"
                Padding="25"
                Effect="{StaticResource ShadowEffect}">

            <StackPanel>

                <!-- Title -->
                <TextBlock Text="Doctor Feedback"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{StaticResource DarkBlue}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Select doctor -->
                <TextBlock Text="Select Doctor:"
                           FontWeight="SemiBold"/>
                <ComboBox x:Name="cbDoctor"
                          Height="32"
                          Margin="0,0,0,15"
                          DisplayMemberPath="FullName"
                          SelectionChanged="cbDoctor_SelectionChanged"/>

                <!-- Doctor card -->
                <Border x:Name="doctorCard"
                        Background="#F8FAFF"
                        BorderBrush="#D0D7E2"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="15"
                        Visibility="Collapsed"
                        Margin="0,0,0,15">

                    <StackPanel>
                        <TextBlock x:Name="txtDoctorName"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"/>

                        <TextBlock x:Name="txtDoctorDept"
                                   FontSize="14"
                                   Foreground="Gray"
                                   Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Rating -->
                <StackPanel x:Name="ratingPanel" Visibility="Collapsed">
                    <TextBlock Text="Rate your experience:"
                               FontSize="14"
                               FontWeight="SemiBold"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                        <Button Style="{StaticResource StarButtonStyle}" Tag="1" Click="Star_Click"/>
                        <Button Style="{StaticResource StarButtonStyle}" Tag="2" Click="Star_Click"/>
                        <Button Style="{StaticResource StarButtonStyle}" Tag="3" Click="Star_Click"/>
                        <Button Style="{StaticResource StarButtonStyle}" Tag="4" Click="Star_Click"/>
                        <Button Style="{StaticResource StarButtonStyle}" Tag="5" Click="Star_Click"/>
                    </StackPanel>
                </StackPanel>

                <!-- Comment -->
                <TextBlock Text="Your Feedback:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>

                <TextBox x:Name="txtComment"
                         Height="120"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,15"/>

                <Button x:Name="btnSubmit"
                        Content="Submit"
                        Width="120"
                        Height="38"
                        HorizontalAlignment="Right"
                        Style="{StaticResource PrimaryButton}"
                        Click="BtnSubmit_Click"
                        IsEnabled="False"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
