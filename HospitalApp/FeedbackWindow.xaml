<Window x:Class="HospitalApp.FeedbackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Feedback"
        Height="380" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBrush}">
    <Grid Margin="20">
        <Border Background="White"
                CornerRadius="10"
                Padding="20"
                Effect="{StaticResource ShadowEffect}">
            <StackPanel>
                <TextBlock Text="Give Feedback"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource DarkBlue}"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Doctor"/>
                <ComboBox x:Name="cbDoctor"
                          Height="28"
                          Margin="0,0,0,10"
                          DisplayMemberPath="FullName"/>

                <TextBlock Text="Rating (1–5)"/>
                <TextBox x:Name="txtRating"
                         Height="28"
                         Margin="0,0,0,10"/>

                <TextBlock Text="Comment"/>
                <TextBox x:Name="txtComment"
                         Height="90"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Margin="0,0,0,10"/>

                <Button Content="Submit"
                        Height="34"
                        HorizontalAlignment="Right"
                        Style="{StaticResource PrimaryButton}"
                        Click="BtnSubmit_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
