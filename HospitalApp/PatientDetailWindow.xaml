<Window x:Class="HospitalApp.PatientDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patient Detail"
        Height="440" Width="520"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBrush}">
    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20" Effect="{StaticResource ShadowEffect}">
            <StackPanel>
                <TextBlock Text="Patient Detail"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Full Name"/>
                <TextBox x:Name="txtName" Height="28" Margin="0,0,0,8"/>

                <TextBlock Text="Gender"/>
                <ComboBox x:Name="cbGender" Height="28" Margin="0,0,0,8">
                    <ComboBoxItem Content="Male"/>
                    <ComboBoxItem Content="Female"/>
                    <ComboBoxItem Content="Other"/>
                </ComboBox>

                <TextBlock Text="Date of Birth"/>
                <DatePicker x:Name="dpDob" Height="28" Margin="0,0,0,8"/>

                <TextBlock Text="Address"/>
                <TextBox x:Name="txtAddress" Height="28" Margin="0,0,0,8"/>

                <TextBlock Text="Username"/>
                <TextBox x:Name="txtUsername" Height="28" Margin="0,0,0,8"/>

                <TextBlock Text="Password"/>
                <PasswordBox x:Name="txtPassword" Height="28" Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Save" Width="100" Height="32"
                            Style="{StaticResource PrimaryButton}"
                            Click="BtnSave_Click"/>
                    <Button Content="Cancel" Width="100" Height="32"
                            Margin="10,0,0,0"
                            Click="BtnCancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
