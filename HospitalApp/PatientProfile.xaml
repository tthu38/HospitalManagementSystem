<Window x:Class="HospitalApp.PatientProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patient Profile"
        Height="620" Width="680"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBrush}">

    <Grid Margin="25">
        <Border Background="White"
                CornerRadius="15"
                Padding="30"
                Effect="{StaticResource ShadowEffect}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ===================== LEFT: AVATAR ===================== -->
                <StackPanel Grid.Column="0"
                            HorizontalAlignment="Center"
                            Margin="0,0,25,0">

                    <Border Width="160" Height="160"
                            CornerRadius="80"
                            Background="#E3F2FD"
                            BorderBrush="{StaticResource PrimaryBrush}"
                            BorderThickness="2"
                            Margin="0,0,0,20"
                            Effect="{StaticResource ShadowEffect}">
                        <Viewbox>
                            <TextBlock Text="👤" FontSize="60"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Viewbox>
                    </Border>

                    <TextBlock x:Name="lblFullName"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"
                               Text="Patient Name"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,6"/>

                    <TextBlock Text="Patient Profile"
                               FontSize="14"
                               Foreground="Gray"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- ===================== RIGHT: FORM ===================== -->
                <StackPanel Grid.Column="1">

                    <TextBlock Text="Personal Information"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{StaticResource DarkBlue}"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Full Name"/>
                    <TextBox x:Name="txtName" Height="32" Margin="0,0,0,10"/>

                    <TextBlock Text="Gender"/>
                    <ComboBox x:Name="cbGender" Height="32" Margin="0,0,0,10">
                        <ComboBoxItem Content="Male"/>
                        <ComboBoxItem Content="Female"/>
                        <ComboBoxItem Content="Other"/>
                    </ComboBox>

                    <TextBlock Text="Date of Birth"/>
                    <DatePicker x:Name="dpDob" Height="32" Margin="0,0,0,10"/>

                    <TextBlock Text="Address"/>
                    <TextBox x:Name="txtAddress" Height="32" Margin="0,0,0,10"/>

                    <Separator Margin="0,10,0,10"/>

                    <TextBlock Text="Username"/>
                    <TextBox x:Name="txtUsername" Height="32" Margin="0,0,0,10"/>

                    <TextBlock Text="Password"/>
                    <PasswordBox x:Name="txtPassword" Height="32" Margin="0,0,0,15"/>

                    <TextBlock Text="Email"/>
                    <TextBox x:Name="txtEmail" Height="32" Margin="0,0,0,10"/>

                    <TextBlock Text="Phone"/>
                    <TextBox x:Name="txtPhone" Height="32" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,20,0,0">
                        <Button Content="Save"
                                Width="110" Height="36"
                                Style="{StaticResource PrimaryButton}"
                                Click="BtnSave_Click"/>

                        <Button Content="Close"
                                Width="110" Height="36"
                                Margin="10,0,0,0"
                                Click="BtnClose_Click"/>
                    </StackPanel>

                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
