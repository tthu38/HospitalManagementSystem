<Window x:Class="HospitalApp.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hospital Management System"
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F7F9FB">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- 🔹 Header -->
        <Border Background="#1976D2" Height="60">
            <DockPanel VerticalAlignment="Center" LastChildFill="False" Margin="20,0">
                <TextBlock Text="🏥  Hospital Management System"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           DockPanel.Dock="Left"
                           VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0">
                    <Button Content="Home" Style="{StaticResource MenuButtonStyle}" Click="BtnHome_Click"/>
                    <Button Content="Login" Style="{StaticResource MenuButtonStyle}" Click="BtnLogin_Click"/>
                    <Button Content="Register" Style="{StaticResource MenuButtonStyle}" Click="BtnRegister_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- 🔹 Main Section -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">

                <!-- Welcome Section -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Welcome to Our Hospital"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#1976D2"/>
                        <TextBlock Text="Providing compassionate healthcare with modern facilities and experienced specialists."
                                   TextWrapping="Wrap"
                                   Margin="0,10,0,20"
                                   FontSize="14"
                                   Foreground="#444"/>

                        <Button Content="Goooooo"
                                Width="130" Height="38"
                                Background="#43A047"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderBrush="#43A047"
                                Cursor="Hand"/>
                    </StackPanel>

                    <!-- Right -->
                    <Border Grid.Column="1" HorizontalAlignment="Center">
                        <StackPanel>
                            <Viewbox Width="200" Height="200">
                                <Canvas>
                                    <!-- Simple heart + dumbbell icon vector -->
                                    <Path Data="M 100,30 C 80,0 20,0 20,60 A 40,40 0 0 0 100,130 A 40,40 0 0 0 180,60 C 180,0 120,0 100,30 Z"
                                          Stroke="#00BCD4" StrokeThickness="4" Fill="Transparent"/>
                                    <Rectangle Width="60" Height="8" Fill="#00BCD4" Canvas.Left="70" Canvas.Top="70"/>
                                    <Ellipse Width="20" Height="20" Fill="#00BCD4" Canvas.Left="60" Canvas.Top="65"/>
                                    <Ellipse Width="20" Height="20" Fill="#00BCD4" Canvas.Left="130" Canvas.Top="65"/>
                                </Canvas>
                            </Viewbox>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Services Section -->
                <TextBlock Text="Our Services"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#1976D2"
                           HorizontalAlignment="Center"
                           Margin="0,40,0,20"/>

                <UniformGrid Columns="3" Rows="2" Margin="0,0,0,30">
                    <!-- Each service card -->
                    <Border Style="{StaticResource ServiceCardStyle}">
                        <StackPanel>
                            <TextBlock Text="💓  Cardiology" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="Heart care and diagnostics from top specialists." TextWrapping="Wrap" FontSize="13" Foreground="#555"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource ServiceCardStyle}">
                        <StackPanel>
                            <TextBlock Text="🧠  Neurology" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="Comprehensive brain and nervous system treatments." TextWrapping="Wrap" FontSize="13" Foreground="#555"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource ServiceCardStyle}">
                        <StackPanel>
                            <TextBlock Text="🦵  Orthopedics" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="Bone and joint care with advanced recovery plans." TextWrapping="Wrap" FontSize="13" Foreground="#555"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource ServiceCardStyle}">
                        <StackPanel>
                            <TextBlock Text="👶  Pediatrics" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="Quality child care and immunization programs." TextWrapping="Wrap" FontSize="13" Foreground="#555"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource ServiceCardStyle}">
                        <StackPanel>
                            <TextBlock Text="💆  Dermatology" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="Skin and cosmetic treatments from certified experts." TextWrapping="Wrap" FontSize="13" Foreground="#555"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
