<Window x:Class="HospitalApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register Patient"
        Height="550" Width="520"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBrush}">
    <Grid Margin="20">
        <Border Background="White"
                CornerRadius="10"
                Padding="20"
                Effect="{StaticResource ShadowEffect}">
            <StackPanel>
                <TextBlock Text="Patient Registration"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Full Name" Margin="0,0,0,3"/>
                <TextBox x:Name="txtName" Height="30" Margin="0,0,0,8"/>

                <TextBlock Text="Gender" Margin="0,0,0,3"/>
                <ComboBox x:Name="cbGender" Height="30" Margin="0,0,0,8">
                    <ComboBoxItem Content="Male"/>
                    <ComboBoxItem Content="Female"/>
                    <ComboBoxItem Content="Other"/>
                </ComboBox>

                <TextBlock Text="Date of Birth" Margin="0,0,0,3"/>
                <DatePicker x:Name="dpDob" Height="30" Margin="0,0,0,8"/>

                <TextBlock Text="Address" Margin="0,0,0,3"/>
                <TextBox x:Name="txtAddress" Height="30" Margin="0,0,0,8"/>

                <TextBlock Text="Username" Margin="0,0,0,3"/>
                <TextBox x:Name="txtUsername" Height="30" Margin="0,0,0,8"/>

                <TextBlock Text="Password" Margin="0,0,0,3"/>
                <PasswordBox x:Name="txtPassword" Height="30" Margin="0,0,0,15"/>

                <TextBlock Text="Email" Margin="0,0,0,3"/>
                <TextBox x:Name="txtEmail" Height="30" Margin="0,0,0,8"/>

                <TextBlock Text="Phone" Margin="0,0,0,3"/>
                <TextBox x:Name="txtPhone" Height="30" Margin="0,0,0,8"/>

                <Button Content="Send OTP"
                    Height="30"
                    Width="100"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,8"
                    Click="BtnSendOtp_Click"/>

                <TextBlock Text="Enter OTP" Margin="0,0,0,3"/>
                <TextBox x:Name="txtOtp" Height="30" Margin="0,0,0,15"/>


                <Button Content="Register"
                        Height="36"
                        HorizontalAlignment="Right"
                        Style="{StaticResource PrimaryButton}"
                        Click="BtnRegister_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
