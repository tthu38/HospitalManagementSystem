<Window x:Class="HospitalApp.BillingCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Billing"
        Height="420" Width="560"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBrush}">
    <Grid Margin="20">
        <Border Background="White"
                CornerRadius="10"
                Padding="20"
                Effect="{StaticResource ShadowEffect}">
            <StackPanel>
                <TextBlock Text="Create Billing Record"
                           FontSize="20" FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Select Admission" Foreground="Gray"/>
                <ComboBox x:Name="cbAdmission"
                          Height="32"
                          Margin="0,2,0,10"
                          DisplayMemberPath="DisplayInfo"/>

                <TextBlock Text="Total Amount" Foreground="Gray"/>
                <TextBox x:Name="txtAmount"
                         Height="32"
                         Margin="0,2,0,20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Create"
                            Width="100" Height="36"
                            Style="{StaticResource PrimaryButton}"
                            Click="BtnCreate_Click"/>
                    <Button Content="Cancel"
                            Width="100" Height="36"
                            Margin="10,0,0,0"
                            Click="BtnCancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
