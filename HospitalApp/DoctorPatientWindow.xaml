<Window x:Class="HospitalApp.DoctorPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Patients"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBrush}">
    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20">
            <DataGrid x:Name="dgPatients"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="150"/>
                    <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="80"/>
                    <DataGridTextColumn Header="DOB" Binding="{Binding Dob}" Width="100"/>
                    <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="250"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
